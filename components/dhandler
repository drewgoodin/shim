<%shared>
use Shim::Tools;
my $posts;
my $tag = $m->request_args->{tag};
if ($tag) {
	$tag = lc $tag;
	$posts = fetch_posts(posts_with_tag($tag));
}
else {
	$posts = Shim::Tools::fetch_posts();
}
my $summary_aref = Shim::Tools::fetch_posts('summary');
my $summary = @$summary_aref[0];
</%shared>
% use DateTime;
% use Text::Markdown qw!markdown!;
<div class="title">
	<a href="/" id="homelink"><% $summary->title %></a>
	<hr>
</div>
<div class="main">
	<% markdown($summary->body) %>
	<hr>

% if ($ENV{REMOTE_USER}) {
		<div class='sidebar'><a href='/logged-in/new-post'>New Post</a></div>
% } 
	<div class='posts'>
% if ($tag) {
		<p>Narrowed by: '<% $tag %>'</p>
		<a href = '<% $m->base_comp->dir_path %>'> clear</a>
% }
% my $post_count = 0;
% if ($posts) {
		<ul>
%		for (sort { $b->id <=> $a->id } @$posts) {
%			$post_count++;
			<li>
			<a href="/view-post?id=<% $_->id %>"><% $_->title %></a>
			<div class="date"><% DateTime->from_epoch(epoch=>$_->id, time_zone => 'America/Chicago')->mdy %></div>
		</li>
%		}
		</ul>
% }
% unless ($post_count) {
		<p class="emph">No posts found</p>
% }
	</div>
	<div id = 'tags'>
	<& /all-tags &>
	</div>
</div>
<%method title><% $summary->title %></%method>
<%method keywords></%method>
