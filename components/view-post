% use Text::Markdown qw!markdown!;
<%shared>
my $post = Shim->new($m->request_args->{id});
</%shared>
<h2><% $post->title %></h2>
<div class="tags">Tags:
% for ($post->tags) {
<a href="<% qq!/?tags=$_! %>"><% $_ %></a>
% } 
</div>
<% markdown($post->body) %> 
<%method title><% $post->title %></%method>
<%method keywords><% join "," => $post->tags %></%method>
