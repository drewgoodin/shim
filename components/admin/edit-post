<%args>
$id
</%args>
<%init>
use Shim::Tools;
my %post_content = Shim::Tools::post_content($id);
my $post = Shim::Post->new($id);
</%init>
<& new-post, title=>$post_content{title}, body=>(join "", @{$post_content{body}}), id=>$id, tags=>[$post->tags], &>
<a href="/admin/delete-post?id=<% $id %>" onclick='return confirm("Are you sure?")'>Delete Post</a>
