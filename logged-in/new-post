<%args>
$title=>""
$body=>""
@tags=>()
$id=>""
</%args>

<form action = 
% if ($id) { 
'/logged-in/post-success?id=<% $id %>'
% }
% else {
'/logged-in/post-success'
% }
method = "post">

<p>Title: <input type = "text/plain" name = "title" value="<% $title %>" /></p>
<p><textarea type = "text/plain" name = "body" /><% $body %></textarea></p>
<p>Tags (comma separated):<input type = "text/plain" name = "tags" value=<% join "," => @tags %> ></p>
<button type = "submit">Post</button>
</form>
